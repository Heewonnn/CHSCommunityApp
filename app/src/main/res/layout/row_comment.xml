<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yellow_border2"
    android:layout_margin="5dp">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/commentUserImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/userphoto" />

    <TextView
        android:id="@+id/commentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:text="Name"
        app:layout_constraintStart_toEndOf="@id/commentUserImage"
        />

    <TextView
        android:id="@+id/commentUserComment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/commentUserName"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@id/commentUserImage"/>

